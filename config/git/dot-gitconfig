[user]
	name = Jon Moses
	email = jon@burningbush.us
[alias]
    a = add
    aa = add -u
    s = status
    d = diff
    cm = commit -m
	co = checkout
    gone = ! "git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D"
    db-deps = ! "for f in $(gh pr list --author 'app/dependabot' --json headRefName  --template '{{range .}}{{.headRefName}}{{\"\\n\"}}{{end}}' ) ; do git merge origin/$f --no-edit ; done"

[core]
    pager = less -F
	excludesfile = ~/.gitignore
	hooksPath = /Users/jon.moses/dev/misc/global-pre-commit-hooks/hooks
[push]
	default = current
[pull]
	rebase = true
[diff]
    external = difft

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Dracula
    navigate = true
    dark = true
    features = decorations

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[rerere]
	enabled = true
[rebase]
	autoStash = true
	autosquash = true
	updateRefs = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autoCorrect = 20
[init]
	defaultBranch = main
[fetch]
	prune = true
